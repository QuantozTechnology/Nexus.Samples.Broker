@page
@model Nexus.Samples.Broker.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="page">
    <div class="page__content">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Mails Ready to Send</h2>
                    @if (!Model.Successful)
                    {
                        <p>An error occured fetching the mails.</p>
                    }
                    else if (Model.Mails.Length > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>
                                            Created
                                        </th>
                                        <th>Code</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Mails)
                                    {
                                        <tr>
                                            <td>
                                                @item.Created
                                            </td>
                                            <td>@item.Code</td>
                                            <td>@item.Recipient.Email</td>
                                            <td>@item.Status</td>
                                            <td>@item.Type</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No mails to show.</p>
                    }

                </div>
            </div>
            <div class="row">
                <div class="col">
                    <form asp-page-handler="send" method="post" class="form frends-form create">
                        <button type="submit" class="form__submit btn btn-brand-color">
                            Send All Mails
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>