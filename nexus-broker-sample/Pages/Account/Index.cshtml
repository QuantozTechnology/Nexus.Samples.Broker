@page "{crypto}"
@model Nexus.Samples.Broker.Pages.Account.IndexModel
@inject SupportedCryptoHelper SupportCryptoHelper
@{
    string route = Html.GetActiveCrypto();
    var supportedCrypto = SupportCryptoHelper.GetSupportedCryptoFromRoute(route);
    string dcCode = supportedCrypto.Name;
    ViewData["Title"] = Resources.AccountPages.AccountPageTabTitle;

    var cryptoSelector = new CryptoSelectorViewModel("", "/Account/Index", RouteData.Values["crypto"].ToString(), false);
}

<div class="page page--grey container-fluid">
    <div class="row">
        <div class="col-md-6 intro py-5 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-10">
                        <div class="intro__content">
                            <h1 class="intro__title">@Resources.AccountPages.AccountAsideAddTitle</h1>
                            <div class="intro__content">@Resources.AccountPages.AccountAsideDesc</div>
                            <partial name="_CryptoSelector" model="cryptoSelector" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 py-5">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-xl-8 col-lg-10">
                        <partial name="CreateAccountPartial" model="Model" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
